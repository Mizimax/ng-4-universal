{
  "name": "ng-universal-demo",
  "version": "1.0.0",
  "main": "server.js",
  "repository": {},
  "scripts": {
    "postinstall": "npm run build:prod",
    "start": "node dist/server/server.js",
    "build": "webpack",
    "build:aot": "npm run purifycss & webpack --env.aot --env.client & webpack --env.aot --env.server",
    "build:prod": "webpack --env.aot --env.client -p & webpack --env.aot --env.server -p & npm run purifycss",
    "prebuild": "npm run clean",
    "prebuild:aot": "npm run clean",
    "prebuild:prod": "npm run clean",
    "clean": "rimraf dist",
    "server": "nodemon dist/server/server.js",
    "dev": "webpack --watch",
    "purifycss": "purifycss ./src/css/*.css ./src/app/**/*.html -o ./dist/static/style.css -m"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "license": "MIT",
  "dependencies": {
    "@angular/animations": "^4.2.6",
    "@angular/common": "^4.2.6",
    "@angular/compiler": "^4.2.6",
    "@angular/core": "^4.2.6",
    "@angular/forms": "^4.2.6",
    "@angular/http": "^4.2.6",
    "@angular/platform-browser": "^4.2.6",
    "@angular/platform-browser-dynamic": "^4.2.6",
    "@angular/platform-server": "^4.2.6",
    "@angular/router": "^4.2.6",
    "core-js": "^2.4.1",
    "express": "^4.15.3",
    "rxjs": "^5.4.2",
    "xhr2": "*",
    "zone.js": "*"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^4.2.6",
    "@ngtools/webpack": "^1.5.0",
    "@types/express": "^4.0.35",
    "@types/node": "^8.0.9",
    "compression": "^1.6.2",
    "copy-webpack-plugin": "^4.0.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "html-webpack-plugin": "^2.29.0",
    "nodemon": "^1.11.0",
    "purify-css": "^1.2.6",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "script-ext-html-webpack-plugin": "^1.8.3",
    "typescript": "^2.4.1",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "webpack": "^3.1.0",
    "webpack-merge": "^4.0.0"
  }
}
